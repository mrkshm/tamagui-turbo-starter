{
  "name": "@bbook/ui",
  "version": "0.0.1",
  "sideEffects": [
    "*.css"
  ],
  "private": true,
  "type": "module",
  "types": "./src",
  "main": "src/index.tsx",
  "module:jsx": "src",
  "files": [
    "types",
    "dist"
  ],
  "scripts": {
    "build": "tamagui-build --skip-types",
    "watch": "tamagui-build --skip-types --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "@bbook/stores": "workspace:*",
    "@bbook/i18n": "workspace:*",
    "@bbook/utils": "workspace:*",
    "@tamagui/animations-moti": "^1.132.8",
    "@tamagui/animations-react-native": "^1.132.8",
    "@tamagui/config": "^1.132.8",
    "@tamagui/focus-scope": "^1.132.8",
    "@tamagui/font-inter": "^1.132.8",
    "@tamagui/get-font-sized": "^1.132.8",
    "@tamagui/get-token": "^1.132.8",
    "@tamagui/helpers": "^1.132.8",
    "@tamagui/lucide-icons": "^1.132.8",
    "@tamagui/portal": "^1.132.8",
    "@tamagui/react-native-media-driver": "^1.132.8",
    "@tamagui/shorthands": "^1.132.8",
    "@tamagui/themes": "^1.132.8",
    "@tamagui/toast": "^1.132.8",
    "@tamagui/web": "^1.132.8",
    "expo-constants": "^17.1.7",
    "react-native-svg": "^15.12.0",
    "tamagui": "^1.132.8"
  },
  "devDependencies": {
    "@tamagui/build": "^1.132.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^26.1.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.79.5",
    "typescript": "^5.8.3"
  }
}
